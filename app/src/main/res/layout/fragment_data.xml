<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@drawable/fon"
    android:orientation="vertical"
    tools:context=".DataFragment"
    tools:ignore="MissingDefaultResource">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00B31A1A"
        android:fontFamily="@font/swogl"
        android:text="Далекая галактика"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#FFD300"
        android:textSize="30sp"
        app:drawableTint="#FFC300" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="256dp"
        android:contentDescription="TODO"
        android:src="@drawable/sw1" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/swogl"
        android:text="Новая надежда"
        android:textAllCaps="true"
        android:textColor="#3174E3"
        android:paddingLeft="25dp"
        android:paddingTop="15dp"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="25dp"
        android:paddingRight="150dp"
        android:text="Первый фильм вышел в 1977 году. Успех был настолько велик, что трилогия не заставила себя ждать"
        android:textAlignment="viewStart"
        android:textColor="#FFFFFF"
        android:typeface="normal"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/swogl"
        android:paddingTop="15dp"
        android:paddingRight="25dp"
        android:text="Скрытая угроза"
        android:textAlignment="textEnd"
        android:textAllCaps="true"
        android:textColor="#EF032B"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="87dp"
        android:paddingLeft="150dp"
        android:paddingRight="25dp"
        android:text="4 фильм вышел лишь в 1999, когда уровень графики позволил создать задуманное. Так появилась трилогия приевелов"
        android:textAlignment="textEnd"
        android:textColor="#FFFFFF"
        android:typeface="normal"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/swogl"
        android:paddingLeft="25dp"
        android:paddingTop="15dp"
        android:text="Войны клонов"
        android:textAllCaps="true"
        android:textColor="#3174E3"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="25dp"
        android:paddingRight="150dp"
        android:text="В 2008 году вышел полнометражный мультфильм о эпохе Войн клонов. После него вышло еще 7 сезонов."
        android:textAlignment="viewStart"
        android:textColor="#FFFFFF"
        android:typeface="normal"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/swogl"
        android:paddingTop="15dp"
        android:paddingRight="25dp"
        android:text="Пробуждение силы"
        android:textAlignment="textEnd"
        android:textAllCaps="true"
        android:textColor="#EF032B"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="89dp"
        android:paddingLeft="130dp"
        android:paddingRight="25dp"
        android:text="Когда Дисней купил эту франшизу, то выпустил свою трилогию сиквелов, которая оказалась жалкой калькой оригинальных фильмов"
        android:textAlignment="textEnd"
        android:textColor="#FFFFFF"
        android:typeface="normal"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="225dp"
        android:src="@drawable/sw2" />
</LinearLayout>